HEADER	= ft_printf.h
SRCS	= ft_printf.c \
dec_to_lowerhex .c \
dec_to_upperhex.c \
printf_itoa.c \
printf_putchar.c \
printf_putstr.c \
ptr_to_hex.c \
unsigned_itoa.c \

OBJS	= $(SRCS:.c=.o)

CC		= gcc
FLAG	= -Wall -Wextra -Werror

all:	$(NAME)

$(NAME): $(OBJS)
	@ar rc $(NAME) $(OBJS)

clean:
	rm -f $(OBJS)

fclean: clean
	rm -f $(NAME)

re: fclean
	$(MAKE) all

.PHONY: all clean fclean re